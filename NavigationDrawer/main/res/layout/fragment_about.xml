<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".about">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add notes"
        android:textSize="26sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="#022242"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="0dp"
        android:lines="10"
        android:hint=" Enter your Notes here \n, amet consectetur adipisicing elit. Iusto voluptatem tempora odit illum asperiores, aliquam ea repellendus dolorum minus iste eveniet adipisci ratione modi cum fugiat veniam non ipsam sit. Lorem ipsum dolor sit, amet consectetur adipisicing elit. I"
        android:textSize="22sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>
</LinearLayout>